{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"sourceMap": true,
		"noEmitOnError": false,
		"moduleResolution": "node",
		"outDir": "dist",
		"declaration": true,
		"strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	]
}
